{% comment %}
  Image with Text Section
  Two-column layout with image and text content
{% endcomment %}

{%- liquid
  assign layout_class = 'image-with-text--image-first'
  if section.settings.layout == 'text_first'
    assign layout_class = 'image-with-text--text-first'
  endif
-%}

<section class="section image-with-text {{ layout_class }}" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="image-with-text__grid">
      
      {%- comment -%} Image {%- endcomment -%}
      <div class="image-with-text__media" data-animate>
        {%- if section.settings.image != blank -%}
          <img 
            src="{{ section.settings.image | image_url: width: 1000 }}"
            srcset="{{ section.settings.image | image_url: width: 500 }} 500w,
                    {{ section.settings.image | image_url: width: 750 }} 750w,
                    {{ section.settings.image | image_url: width: 1000 }} 1000w"
            sizes="(min-width: 768px) 50vw, 100vw"
            alt="{{ section.settings.image.alt | escape }}"
            class="image-with-text__image"
            loading="lazy"
          >
        {%- else -%}
          <div class="image-with-text__placeholder">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {%- endif -%}
      </div>

      {%- comment -%} Content {%- endcomment -%}
      <div class="image-with-text__content" data-animate>
        {%- if section.settings.subheading != blank -%}
          <span class="image-with-text__subheading label-text">{{ section.settings.subheading }}</span>
        {%- endif -%}
        
        {%- if section.settings.heading != blank -%}
          <h2 class="image-with-text__heading h2">{{ section.settings.heading }}</h2>
        {%- endif -%}
        
        {%- if section.settings.text != blank -%}
          <div class="image-with-text__text prose">{{ section.settings.text }}</div>
        {%- endif -%}
        
        {%- if section.settings.button_text != blank -%}
          <a href="{{ section.settings.button_link }}" class="image-with-text__button btn btn--primary">
            {{ section.settings.button_text }}
          </a>
        {%- endif -%}
      </div>
      
    </div>
  </div>
</section>

<style>
  .image-with-text__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    align-items: center;
  }
  
  .image-with-text--text-first .image-with-text__media {
    order: 2;
  }
  
  .image-with-text__media {
    position: relative;
    aspect-ratio: 4 / 5;
    overflow: hidden;
    border-radius: var(--radius-lg);
  }
  
  .image-with-text__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .image-with-text__placeholder {
    width: 100%;
    height: 100%;
    background-color: var(--color-background-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .image-with-text__placeholder svg {
    width: 50%;
    height: auto;
    opacity: 0.3;
  }
  
  .image-with-text__content {
    padding: var(--space-8) 0;
  }
  
  .image-with-text__subheading {
    display: block;
    margin-bottom: var(--space-4);
  }
  
  .image-with-text__heading {
    margin-bottom: var(--space-6);
  }
  
  .image-with-text__text {
    margin-bottom: var(--space-8);
    color: var(--color-text-muted);
  }
  
  @media (max-width: 768px) {
    .image-with-text__grid {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }
    
    .image-with-text--text-first .image-with-text__media {
      order: 0;
    }
    
    .image-with-text__media {
      aspect-ratio: 1 / 1;
    }
    
    .image-with-text__content {
      padding: 0;
    }
  }
</style>

{% schema %}
{
  "name": "Image with Text",
  "class": "section-image-with-text",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "About Us"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Share your brand story with customers. Describe a product, make announcements, or welcome customers to your store.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        { "value": "image_first", "label": "Image first" },
        { "value": "text_first", "label": "Text first" }
      ],
      "default": "image_first"
    }
  ],
  "presets": [
    {
      "name": "Image with Text"
    }
  ]
}
{% endschema %}
