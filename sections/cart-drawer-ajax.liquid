{% comment %}
  Cart Drawer
  Slide-out AJAX cart with upsells
{% endcomment %}

<div id="CartDrawer" class="cart-drawer" data-cart-drawer aria-hidden="true" role="dialog" aria-labelledby="CartDrawerTitle">
  <div class="cart-drawer__overlay" data-cart-drawer-close></div>
  
  <div class="cart-drawer__container">
    <div class="cart-drawer__header">
      <h2 id="CartDrawerTitle" class="cart-drawer__title">
        {{ 'cart.general.title' | t }}
        <span class="cart-drawer__count" data-cart-count>({{ cart.item_count }})</span>
      </h2>
      <button type="button" class="cart-drawer__close" data-cart-drawer-close aria-label="{{ 'accessibility.close' | t }}">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>

    <div class="cart-drawer__body" data-cart-drawer-body>
      {%- if cart.item_count > 0 -%}
        <form action="{{ routes.cart_url }}" method="post" id="CartDrawerForm">
          <div class="cart-drawer__items" data-cart-items>
            {%- for item in cart.items -%}
              <div class="cart-drawer__item" data-cart-item data-key="{{ item.key }}">
                <a href="{{ item.url }}" class="cart-drawer__item-image-link">
                  {%- if item.image -%}
                    <img 
                      src="{{ item.image | image_url: width: 120 }}"
                      alt="{{ item.image.alt | escape }}"
                      class="cart-drawer__item-image"
                      width="60"
                      height="60"
                      loading="lazy"
                    >
                  {%- else -%}
                    <div class="cart-drawer__item-image cart-drawer__item-image--placeholder">
                      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                        <circle cx="8.5" cy="8.5" r="1.5"></circle>
                        <polyline points="21 15 16 10 5 21"></polyline>
                      </svg>
                    </div>
                  {%- endif -%}
                </a>

                <div class="cart-drawer__item-details">
                  <a href="{{ item.url }}" class="cart-drawer__item-title">
                    {{ item.product.title }}
                  </a>
                  
                  {%- unless item.product.has_only_default_variant -%}
                    <p class="cart-drawer__item-variant">{{ item.variant.title }}</p>
                  {%- endunless -%}
                  
                  {%- if item.selling_plan_allocation -%}
                    <p class="cart-drawer__item-selling-plan">{{ item.selling_plan_allocation.selling_plan.name }}</p>
                  {%- endif -%}

                  {%- for property in item.properties -%}
                    {%- unless property.last == blank or property.first contains '_' -%}
                      <p class="cart-drawer__item-property">
                        <span>{{ property.first }}:</span> {{ property.last }}
                      </p>
                    {%- endunless -%}
                  {%- endfor -%}

                  <div class="cart-drawer__item-price">
                    {%- if item.original_line_price != item.final_line_price -%}
                      <span class="cart-drawer__item-price-compare">{{ item.original_line_price | money }}</span>
                    {%- endif -%}
                    <span class="cart-drawer__item-price-current">{{ item.final_line_price | money }}</span>
                  </div>
                </div>

                <div class="cart-drawer__item-actions">
                  <div class="cart-drawer__quantity">
                    <button 
                      type="button" 
                      class="cart-drawer__quantity-btn" 
                      data-quantity-minus
                      aria-label="{{ 'cart.general.decrease' | t }}"
                    >
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                      </svg>
                    </button>
                    <input 
                      type="number" 
                      class="cart-drawer__quantity-input" 
                      name="updates[{{ item.key }}]" 
                      value="{{ item.quantity }}" 
                      min="0"
                      data-quantity-input
                      aria-label="{{ 'cart.label.quantity' | t }}"
                    >
                    <button 
                      type="button" 
                      class="cart-drawer__quantity-btn" 
                      data-quantity-plus
                      aria-label="{{ 'cart.general.increase' | t }}"
                    >
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="12" y1="5" x2="12" y2="19"></line>
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                      </svg>
                    </button>
                  </div>
                  <button 
                    type="button" 
                    class="cart-drawer__item-remove" 
                    data-remove-item
                    aria-label="{{ 'cart.general.remove' | t }}"
                  >
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="3 6 5 6 21 6"></polyline>
                      <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                    </svg>
                  </button>
                </div>
              </div>
            {%- endfor -%}
          </div>

          {%- if settings.cart_drawer_show_note -%}
            <div class="cart-drawer__note">
              <label for="CartDrawerNote" class="cart-drawer__note-label">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                  <polyline points="14 2 14 8 20 8"></polyline>
                  <line x1="16" y1="13" x2="8" y2="13"></line>
                  <line x1="16" y1="17" x2="8" y2="17"></line>
                </svg>
                {{ 'cart.general.note' | t }}
              </label>
              <textarea 
                id="CartDrawerNote" 
                name="note" 
                class="cart-drawer__note-input"
                placeholder="{{ 'cart.general.note_placeholder' | t }}"
              >{{ cart.note }}</textarea>
            </div>
          {%- endif -%}
        </form>

        {%- comment -%} Upsells {%- endcomment -%}
        {%- if settings.cart_drawer_show_upsells -%}
          {%- assign upsell_collection = collections[settings.cart_drawer_upsell_collection] -%}
          {%- if upsell_collection.products.size > 0 -%}
            <div class="cart-drawer__upsells">
              <h3 class="cart-drawer__upsells-title">{{ 'cart.upsell.title' | t | default: 'You might also like' }}</h3>
              <div class="cart-drawer__upsells-grid">
                {%- for product in upsell_collection.products limit: 3 -%}
                  {%- assign already_in_cart = false -%}
                  {%- for item in cart.items -%}
                    {%- if item.product.id == product.id -%}
                      {%- assign already_in_cart = true -%}
                      {%- break -%}
                    {%- endif -%}
                  {%- endfor -%}
                  {%- unless already_in_cart -%}
                    <div class="cart-drawer__upsell-item">
                      <a href="{{ product.url }}" class="cart-drawer__upsell-image-link">
                        <img 
                          src="{{ product.featured_image | image_url: width: 100 }}"
                          alt="{{ product.featured_image.alt | escape }}"
                          class="cart-drawer__upsell-image"
                          width="50"
                          height="50"
                          loading="lazy"
                        >
                      </a>
                      <div class="cart-drawer__upsell-details">
                        <a href="{{ product.url }}" class="cart-drawer__upsell-title">{{ product.title | truncate: 30 }}</a>
                        <span class="cart-drawer__upsell-price">{{ product.price | money }}</span>
                      </div>
                      <button 
                        type="button" 
                        class="cart-drawer__upsell-add"
                        data-add-to-cart-quick
                        data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                        aria-label="{{ 'products.product.add_to_cart' | t }}"
                      >
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <line x1="12" y1="5" x2="12" y2="19"></line>
                          <line x1="5" y1="12" x2="19" y2="12"></line>
                        </svg>
                      </button>
                    </div>
                  {%- endunless -%}
                {%- endfor -%}
              </div>
            </div>
          {%- endif -%}
        {%- endif -%}
      {%- else -%}
        <div class="cart-drawer__empty" data-cart-empty>
          <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
            <circle cx="9" cy="21" r="1"></circle>
            <circle cx="20" cy="21" r="1"></circle>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
          </svg>
          <p>{{ 'cart.general.empty' | t }}</p>
          <a href="{{ routes.all_products_collection_url }}" class="button button--primary" data-cart-drawer-close>
            {{ 'cart.general.start_shopping' | t }}
          </a>
        </div>
      {%- endif -%}
    </div>

    {%- if cart.item_count > 0 -%}
      <div class="cart-drawer__footer" data-cart-footer>
        {%- if settings.cart_drawer_show_shipping_threshold -%}
          {%- assign threshold = settings.free_shipping_threshold | times: 100 -%}
          {%- assign remaining = threshold | minus: cart.total_price -%}
          {%- if remaining > 0 -%}
            <div class="cart-drawer__shipping-threshold">
              <div class="cart-drawer__shipping-progress">
                <div class="cart-drawer__shipping-bar">
                  <div class="cart-drawer__shipping-bar-fill" style="width: {{ cart.total_price | times: 100 | divided_by: threshold }}%"></div>
                </div>
              </div>
              <p class="cart-drawer__shipping-message">
                {{ 'cart.shipping.threshold_remaining' | t: amount: remaining | money }}
              </p>
            </div>
          {%- else -%}
            <div class="cart-drawer__shipping-threshold cart-drawer__shipping-threshold--success">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              <p>{{ 'cart.shipping.free_shipping' | t }}</p>
            </div>
          {%- endif -%}
        {%- endif -%}

        <div class="cart-drawer__totals">
          <div class="cart-drawer__subtotal">
            <span>{{ 'cart.general.subtotal' | t }}</span>
            <span data-cart-subtotal>{{ cart.total_price | money }}</span>
          </div>
          <p class="cart-drawer__taxes-note">{{ 'cart.general.taxes_calculated' | t }}</p>
        </div>

        <div class="cart-drawer__buttons">
          <a href="{{ routes.cart_url }}" class="button button--secondary cart-drawer__view-cart">
            {{ 'cart.general.title' | t }}
          </a>
          <button type="submit" name="checkout" form="CartDrawerForm" class="button button--primary cart-drawer__checkout">
            {{ 'cart.general.checkout' | t }}
          </button>
        </div>

        {%- if settings.enable_quote_system -%}
          <button type="button" class="cart-drawer__quote-button" data-convert-to-quote>
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14 2 14 8 20 8"></polyline>
            </svg>
            {{ 'cart.quote.convert' | t | default: 'Convert to Quote Request' }}
          </button>
        {%- endif -%}

        <div class="cart-drawer__trust">
          <div class="cart-drawer__trust-item">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
            </svg>
            <span>{{ 'cart.trust.secure' | t | default: 'Secure Checkout' }}</span>
          </div>
          <div class="cart-drawer__trust-item">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
            <span>{{ 'cart.trust.shipping' | t | default: 'Free Shipping Available' }}</span>
          </div>
        </div>
      </div>
    {%- endif -%}
  </div>
</div>

<style>
  .cart-drawer {
    position: fixed;
    inset: 0;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: opacity var(--transition-base), visibility var(--transition-base);
  }

  .cart-drawer.is-open {
    opacity: 1;
    visibility: visible;
  }

  .cart-drawer__overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(2px);
  }

  .cart-drawer__container {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    max-width: 420px;
    background: var(--color-background);
    display: flex;
    flex-direction: column;
    transform: translateX(100%);
    transition: transform var(--transition-base);
  }

  .cart-drawer.is-open .cart-drawer__container {
    transform: translateX(0);
  }

  .cart-drawer__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-4) var(--space-5);
    border-bottom: 1px solid var(--color-border);
    flex-shrink: 0;
  }

  .cart-drawer__title {
    margin: 0;
    font-size: var(--font-size-lg);
  }

  .cart-drawer__count {
    font-weight: var(--font-weight-normal);
    color: var(--color-text-muted);
  }

  .cart-drawer__close {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: none;
    border: none;
    cursor: pointer;
    color: var(--color-text-muted);
    transition: color var(--transition-fast);
  }

  .cart-drawer__close:hover {
    color: var(--color-text);
  }

  .cart-drawer__body {
    flex: 1;
    overflow-y: auto;
    padding: var(--space-4) var(--space-5);
  }

  /* Cart Items */
  .cart-drawer__items {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .cart-drawer__item {
    display: grid;
    grid-template-columns: 60px 1fr auto;
    gap: var(--space-3);
    padding-bottom: var(--space-4);
    border-bottom: 1px solid var(--color-border-light);
  }

  .cart-drawer__item-image-link {
    display: block;
  }

  .cart-drawer__item-image {
    width: 60px;
    height: 60px;
    object-fit: cover;
    border-radius: var(--radius-sm);
    background: var(--color-surface);
  }

  .cart-drawer__item-image--placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-muted);
  }

  .cart-drawer__item-details {
    min-width: 0;
  }

  .cart-drawer__item-title {
    display: block;
    font-weight: var(--font-weight-medium);
    color: var(--color-text);
    text-decoration: none;
    margin-bottom: var(--space-1);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .cart-drawer__item-variant,
  .cart-drawer__item-selling-plan,
  .cart-drawer__item-property {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    margin: 0 0 var(--space-1);
  }

  .cart-drawer__item-price {
    margin-top: var(--space-2);
  }

  .cart-drawer__item-price-compare {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    text-decoration: line-through;
    margin-right: var(--space-2);
  }

  .cart-drawer__item-price-current {
    font-weight: var(--font-weight-medium);
  }

  .cart-drawer__item-actions {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: var(--space-2);
  }

  /* Quantity Controls */
  .cart-drawer__quantity {
    display: flex;
    align-items: center;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
  }

  .cart-drawer__quantity-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    background: none;
    border: none;
    cursor: pointer;
    color: var(--color-text-muted);
    transition: color var(--transition-fast);
  }

  .cart-drawer__quantity-btn:hover {
    color: var(--color-text);
  }

  .cart-drawer__quantity-input {
    width: 32px;
    height: 28px;
    text-align: center;
    border: none;
    background: transparent;
    font-size: var(--font-size-sm);
    -moz-appearance: textfield;
  }

  .cart-drawer__quantity-input::-webkit-outer-spin-button,
  .cart-drawer__quantity-input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  .cart-drawer__item-remove {
    background: none;
    border: none;
    color: var(--color-text-muted);
    cursor: pointer;
    padding: var(--space-1);
    transition: color var(--transition-fast);
  }

  .cart-drawer__item-remove:hover {
    color: var(--color-error);
  }

  /* Note */
  .cart-drawer__note {
    margin-top: var(--space-4);
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-border);
  }

  .cart-drawer__note-label {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    margin-bottom: var(--space-2);
  }

  .cart-drawer__note-input {
    width: 100%;
    min-height: 80px;
    padding: var(--space-3);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    font-size: var(--font-size-sm);
    resize: vertical;
  }

  /* Upsells */
  .cart-drawer__upsells {
    margin-top: var(--space-6);
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-border);
  }

  .cart-drawer__upsells-title {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--space-3);
  }

  .cart-drawer__upsells-grid {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .cart-drawer__upsell-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-2);
    background: var(--color-surface);
    border-radius: var(--radius-sm);
  }

  .cart-drawer__upsell-image {
    width: 50px;
    height: 50px;
    object-fit: cover;
    border-radius: var(--radius-sm);
  }

  .cart-drawer__upsell-details {
    flex: 1;
    min-width: 0;
  }

  .cart-drawer__upsell-title {
    display: block;
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--color-text);
    text-decoration: none;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .cart-drawer__upsell-price {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }

  .cart-drawer__upsell-add {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: var(--color-primary);
    color: var(--color-white);
    border: none;
    border-radius: 50%;
    cursor: pointer;
    transition: transform var(--transition-fast);
  }

  .cart-drawer__upsell-add:hover {
    transform: scale(1.1);
  }

  /* Empty State */
  .cart-drawer__empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: var(--space-12) var(--space-4);
    color: var(--color-text-muted);
  }

  .cart-drawer__empty svg {
    margin-bottom: var(--space-4);
  }

  .cart-drawer__empty p {
    margin-bottom: var(--space-6);
    font-size: var(--font-size-lg);
  }

  /* Footer */
  .cart-drawer__footer {
    padding: var(--space-4) var(--space-5);
    border-top: 1px solid var(--color-border);
    background: var(--color-surface);
    flex-shrink: 0;
  }

  /* Shipping Threshold */
  .cart-drawer__shipping-threshold {
    margin-bottom: var(--space-4);
    padding-bottom: var(--space-4);
    border-bottom: 1px solid var(--color-border-light);
  }

  .cart-drawer__shipping-bar {
    height: 4px;
    background: var(--color-border);
    border-radius: var(--radius-full);
    overflow: hidden;
    margin-bottom: var(--space-2);
  }

  .cart-drawer__shipping-bar-fill {
    height: 100%;
    background: var(--color-primary);
    transition: width var(--transition-base);
  }

  .cart-drawer__shipping-message {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    margin: 0;
  }

  .cart-drawer__shipping-threshold--success {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--color-success);
  }

  .cart-drawer__shipping-threshold--success p {
    font-weight: var(--font-weight-medium);
  }

  /* Totals */
  .cart-drawer__totals {
    margin-bottom: var(--space-4);
  }

  .cart-drawer__subtotal {
    display: flex;
    justify-content: space-between;
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
  }

  .cart-drawer__taxes-note {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    margin: var(--space-1) 0 0;
  }

  /* Buttons */
  .cart-drawer__buttons {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3);
    margin-bottom: var(--space-3);
  }

  .cart-drawer__quote-button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    width: 100%;
    padding: var(--space-3);
    background: transparent;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    font-size: var(--font-size-sm);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .cart-drawer__quote-button:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
  }

  /* Trust */
  .cart-drawer__trust {
    display: flex;
    justify-content: center;
    gap: var(--space-4);
