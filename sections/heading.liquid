{%- comment -%}
  Heading Section
  A simple heading/text block for page content
{%- endcomment -%}

<section class="heading-section heading-section--{{ section.settings.text_alignment }}">
  <div class="heading-section__container container">
    {%- if section.settings.title != blank -%}
      <h2 class="heading-section__title">{{ section.settings.title }}</h2>
    {%- endif -%}
    
    {%- if section.settings.text != blank -%}
      <div class="heading-section__text rte">
        {{ section.settings.text }}
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  .heading-section {
    padding: 2rem 1.5rem;
  }
  
  .heading-section__container {
    max-width: 900px;
    margin: 0 auto;
  }
  
  .heading-section--left { text-align: left; }
  .heading-section--center { text-align: center; }
  .heading-section--right { text-align: right; }
  
  .heading-section__title {
    font-family: var(--font-heading);
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    font-weight: 400;
    line-height: 1.2;
    margin: 0 0 1rem;
  }
  
  .heading-section__text {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-text-muted);
  }
</style>

{% schema %}
{
  "name": "Heading",
  "tag": "section",
  "class": "section-heading",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Section Heading"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    }
  ],
  "presets": [
    {
      "name": "Heading"
    }
  ]
}
{% endschema %}
