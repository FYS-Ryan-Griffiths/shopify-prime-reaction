{%- comment -%}
  Value Section
  Display company values or key points
{%- endcomment -%}

<section class="value-section">
  <div class="value-section__container container">
    {%- if section.settings.title != blank -%}
      <h2 class="value-section__title">{{ section.settings.title }}</h2>
    {%- endif -%}
    
    {%- if section.settings.description != blank -%}
      <p class="value-section__description">{{ section.settings.description }}</p>
    {%- endif -%}
    
    <div class="value-section__grid">
      {%- for block in section.blocks -%}
        <div class="value-section__item" {{ block.shopify_attributes }}>
          {%- if block.settings.icon != blank -%}
            <div class="value-section__icon">{{ block.settings.icon }}</div>
          {%- endif -%}
          
          {%- if block.settings.title != blank -%}
            <h3 class="value-section__item-title">{{ block.settings.title }}</h3>
          {%- endif -%}
          
          {%- if block.settings.text != blank -%}
            <p class="value-section__item-text">{{ block.settings.text }}</p>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .value-section {
    padding: 4rem 1.5rem;
    background: var(--color-secondary, #f5f5f0);
  }
  
  .value-section__container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .value-section__title {
    font-family: var(--font-heading);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    text-align: center;
    margin-bottom: 0.5rem;
  }
  
  .value-section__description {
    text-align: center;
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto 3rem;
    line-height: 1.6;
  }
  
  .value-section__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
  
  .value-section__item {
    background: var(--color-background, #fff);
    padding: 2rem;
    border-radius: 8px;
    text-align: center;
    box-shadow: 0 2px 8px rgba(0,0,0,0.04);
  }
  
  .value-section__icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .value-section__item-title {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
  }
  
  .value-section__item-text {
    color: var(--color-text-muted);
    line-height: 1.6;
    margin: 0;
  }
  
  @media (max-width: 480px) {
    .value-section__grid {
      grid-template-columns: 1fr;
    }
  }
</style>

{% schema %}
{
  "name": "Values",
  "tag": "section",
  "class": "section-values",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Our Values"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ],
  "blocks": [
    {
      "type": "value",
      "name": "Value",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon (emoji)",
          "default": "‚≠ê"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Value title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Values",
      "blocks": [
        { "type": "value" },
        { "type": "value" },
        { "type": "value" }
      ]
    }
  ]
}
{% endschema %}
