{% comment %}
  Quote History Snippet
  Displays past quote requests for B2B customers
  
  Usage in customer account:
  {% render 'quote-history' %}
{% endcomment %}

{%- if customer -%}
<div class="quote-history" data-quote-history>
  <div class="quote-history__header">
    <h2 class="quote-history__title h3">{{ 'customer.quote_history.title' | t | default: 'Quote Requests' }}</h2>
    <p class="quote-history__subtitle">{{ 'customer.quote_history.subtitle' | t | default: 'View your past quote requests and their status.' }}</p>
  </div>

  <div class="quote-history__content">
    {%- comment -%} Quote history loaded from localStorage and/or metafields {%- endcomment -%}
    <div class="quote-history__empty" data-quote-empty>
      <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
        <polyline points="14 2 14 8 20 8"/>
        <line x1="16" y1="13" x2="8" y2="13"/>
        <line x1="16" y1="17" x2="8" y2="17"/>
        <polyline points="10 9 9 9 8 9"/>
      </svg>
      <p>{{ 'customer.quote_history.empty' | t | default: 'You haven\'t submitted any quote requests yet.' }}</p>
      <a href="{{ routes.all_products_collection_url }}" class="btn btn--secondary">
        {{ 'customer.quote_history.browse_products' | t | default: 'Browse Products' }}
      </a>
    </div>

    <div class="quote-history__list" data-quote-list hidden>
      {%- comment -%} Quotes populated by JavaScript {%- endcomment -%}
    </div>
  </div>
</div>

<style>
  .quote-history {
    padding: var(--space-6) 0;
  }

  .quote-history__header {
    margin-bottom: var(--space-6);
  }

  .quote-history__title {
    margin-bottom: var(--space-2);
  }

  .quote-history__subtitle {
    color: var(--color-text-muted);
  }

  .quote-history__empty {
    text-align: center;
    padding: var(--space-12) var(--space-6);
    background-color: var(--color-surface);
    border-radius: var(--radius-md);
  }

  .quote-history__empty svg {
    color: var(--color-text-muted);
    margin-bottom: var(--space-4);
  }

  .quote-history__empty p {
    color: var(--color-text-muted);
    margin-bottom: var(--space-6);
  }

  .quote-history__list {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .quote-card {
    background-color: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    overflow: hidden;
  }

  .quote-card__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-4);
    background-color: var(--color-surface);
    border-bottom: 1px solid var(--color-border);
  }

  .quote-card__id {
    font-weight: var(--font-weight-medium);
  }

  .quote-card__date {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .quote-card__status {
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
    padding: var(--space-1) var(--space-2);
    font-size: var(--text-xs);
    font-weight: var(--font-weight-medium);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: var(--radius-full);
  }

  .quote-card__status--pending {
    background-color: rgba(234, 179, 8, 0.1);
    color: #b45309;
  }

  .quote-card__status--reviewed {
    background-color: rgba(59, 130, 246, 0.1);
    color: #1d4ed8;
  }

  .quote-card__status--approved {
    background-color: rgba(34, 197, 94, 0.1);
    color: #15803d;
  }

  .quote-card__status--declined {
    background-color: rgba(239, 68, 68, 0.1);
    color: #dc2626;
  }

  .quote-card__body {
    padding: var(--space-4);
  }

  .quote-card__items {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .quote-item {
    display: grid;
    grid-template-columns: 60px 1fr auto;
    gap: var(--space-3);
    align-items: center;
  }

  .quote-item__image {
    width: 60px;
    height: 60px;
    object-fit: cover;
    border-radius: var(--radius-sm);
    background-color: var(--color-surface);
  }

  .quote-item__details {
    min-width: 0;
  }

  .quote-item__title {
    font-weight: var(--font-weight-medium);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .quote-item__variant {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .quote-item__quantity {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    text-align: right;
    white-space: nowrap;
  }

  .quote-card__footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-4);
    border-top: 1px solid var(--color-border);
    background-color: var(--color-surface);
  }

  .quote-card__total-label {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .quote-card__total-value {
    font-weight: var(--font-weight-semibold);
  }

  .quote-card__actions {
    display: flex;
    gap: var(--space-2);
  }

  .quote-card__action {
    padding: var(--space-2) var(--space-3);
    font-size: var(--text-sm);
  }

  @media (max-width: 640px) {
    .quote-card__header {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-2);
    }

    .quote-item {
      grid-template-columns: 50px 1fr;
    }

    .quote-item__quantity {
      grid-column: 2;
      text-align: left;
    }
  }
</style>

<script>
  (function() {
    const container = document.querySelector('[data-quote-history]');
    if (!container) return;

    const emptyEl = container.querySelector('[data-quote-empty]');
    const listEl = container.querySelector('[data-quote-list]');

    // Get quotes from localStorage
    const quotes = JSON.parse(localStorage.getItem('quoteHistory') || '[]');

    if (quotes.length === 0) {
      emptyEl.hidden = false;
      listEl.hidden = true;
      return;
    }

    // Show list, hide empty
    emptyEl.hidden = true;
    listEl.hidden = false;

    // Render quotes
    quotes.sort((a, b) => new Date(b.date) - new Date(a.date));

    quotes.forEach((quote, index) => {
      const card = document.createElement('div');
      card.className = 'quote-card';

      const statusClass = `quote-card__status--${quote.status || 'pending'}`;
      const statusText = {
        pending: 'Pending Review',
        reviewed: 'Under Review',
        approved: 'Approved',
        declined: 'Declined'
      }[quote.status || 'pending'];

      const itemsHtml = (quote.items || []).map(item => `
        <div class="quote-item">
          <img 
            src="${item.image || 'data:image/svg+xml,<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 1 1\"><rect fill=\"%23f5f5f5\"/></svg>'}" 
            alt="${item.title}"
            class="quote-item__image"
            loading="lazy"
          >
          <div class="quote-item__details">
            <div class="quote-item__title">${item.title}</div>
            ${item.variant ? `<div class="quote-item__variant">${item.variant}</div>` : ''}
          </div>
          <div class="quote-item__quantity">Qty: ${item.quantity}</div>
        </div>
      `).join('');

      const date = new Date(quote.date);
      const formattedDate = date.toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'short',
        day: 'numeric'
      });

      card.innerHTML = `
        <div class="quote-card__header">
          <div>
            <span class="quote-card__id">Quote #${quote.id || (1000 + index)}</span>
            <span class="quote-card__date">&mdash; ${formattedDate}</span>
          </div>
          <span class="quote-card__status ${statusClass}">${statusText}</span>
        </div>
        <div class="quote-card__body">
          <div class="quote-card__items">
            ${itemsHtml}
          </div>
        </div>
        <div class="quote-card__footer">
          <div>
            <span class="quote-card__total-label">Total Items:</span>
            <span class="quote-card__total-value">${quote.items?.length || 0}</span>
          </div>
          <div class="quote-card__actions">
            <button type="button" class="btn btn--secondary quote-card__action" data-reorder="${index}">
              Reorder
            </button>
          </div>
        </div>
      `;

      listEl.appendChild(card);
    });

    // Reorder functionality
    listEl.addEventListener('click', function(e) {
      const reorderBtn = e.target.closest('[data-reorder]');
      if (reorderBtn) {
        const index = parseInt(reorderBtn.dataset.reorder);
        const quote = quotes[index];
        
        if (quote && quote.items) {
          // Add items back to quote cart
          localStorage.setItem('quoteCart', JSON.stringify(quote.items));
          window.location.href = '/cart';
        }
      }
    });
  })();
</script>
{%- else -%}
  <div class="quote-history__login">
    <p>{{ 'customer.quote_history.login_required' | t | default: 'Please log in to view your quote history.' }}</p>
    <a href="{{ routes.account_login_url }}" class="btn btn--primary">
      {{ 'customer.log_in' | t | default: 'Log In' }}
    </a>
  </div>
{%- endif -%}
